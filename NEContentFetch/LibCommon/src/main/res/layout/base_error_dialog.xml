<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/default_dialog_width"
    android:layout_height="wrap_content">

    <com.yy.libcommon.Font.AMTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="error_dialog_titleTextView"
        android:id="@+id/error_dialog_titleTextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="25dp"
        android:textColor="@color/colorPrimary" />

    <com.yy.libcommon.Font.AMTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number placed in store must be greater than 0."
        android:id="@+id/error_dialog_errorTextView"
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:textColor="#555555" />

    <com.yy.libcommon.Font.AMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/error_dialog_closeTextView"
        android:textSize="17sp"
        android:textAllCaps="true"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/error_dialog_button_background" />

</LinearLayout>