<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/default_dialog_width"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_title_background"
        android:gravity="center">

        <com.yy.libcommon.Font.AMTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="notes_dialog_titleTextView"
            android:id="@+id/notes_dialog_titleTextView"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <com.yy.libcommon.Font.AMEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notes_dialog_editText"
        android:layout_gravity="center_horizontal"
        android:gravity="left|top"
        android:hint="Your text here"
        android:background="#00FFFFFF"
        android:padding="10dp"
        android:minLines="3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="-2dp">

        <com.yy.libcommon.Font.AMButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Cancel"
            android:id="@+id/notes_dialog_cancelButton"
            android:layout_gravity="right"
            android:layout_weight="1"
            style="@style/orange_hollow_dialog_button"
            android:textSize="17sp"
            />

        <com.yy.libcommon.Font.AMButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Save"
            android:id="@+id/notes_dialog_saveButton"
            android:layout_weight="1"
            style="@style/orange_hollow_dialog_button"
            android:textSize="17sp"
            android:layout_marginLeft="-2dp"
            app:ttf_type="medium"
            />
    </LinearLayout>

</LinearLayout>