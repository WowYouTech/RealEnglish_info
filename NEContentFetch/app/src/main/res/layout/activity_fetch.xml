<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FetchActivity"
    android:orientation="vertical"
    android:gravity="center"
    >

    <Button
        android:id="@+id/toolButton1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Fetch Short(6m)"
        android:singleLine="true"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/common_blue_bg"
        />

    <Button
        android:id="@+id/toolButtonMedium"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Fetch Short(6-9)"
        android:singleLine="true"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/common_blue_bg"
        />


    <Button
        android:id="@+id/toolButton2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Fetch Keys(6m)"
        android:singleLine="true"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/common_blue_bg"
        />

    <Button
        android:id="@+id/toolButtonKeyMedium"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Fetch Keys(6-9)"
        android:singleLine="true"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/common_blue_bg"
        />

</LinearLayout>